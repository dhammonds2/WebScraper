<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc180final.PrimaryController">
   <children>
      <Label text="Enter the first URL to crawl: " />
      <TextField fx:id="firstURL"/>
      <Button fx:id="crawl" text="crawl" onAction="#doTheCrawling"/>
      <Label text="Enter the second URL to crawl: " />
      <TextField fx:id="secondURL"/>
      <Button fx:id="crawl2" text="crawl" onAction="#doTheCrawling2"/>
      <Label text="Enter the third URL to crawl: " />
      <TextField fx:id="thirdURL"/>
      <Button fx:id="crawl2" text="crawl" onAction="#doTheCrawling3"/>
      <Label text="Search Link"/>
      <TextField fx:id="linkSearchInput"/>
      <Label fx:id="linkOutput"/>
      <Button fx:id="searchLink" text="Search for Link" onAction="#searchLink"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
